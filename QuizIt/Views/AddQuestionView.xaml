<UserControl x:Class="QuizIt.Views.AddQuestionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Margin="20">
        <TextBlock Text="➕ Dodaj nowe pytanie" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
        <TextBlock Text="Treść pytania:"/>
        <TextBox x:Name="QuestionBox" Margin="0,0,0,10"/>

        <TextBlock Text="Typ pytania:"/>
        <ComboBox x:Name="QuestionTypeBox" SelectionChanged="QuestionTypeBox_SelectionChanged" Margin="0,0,0,10">
            <ComboBoxItem Content="TextAnswer"/>
            <ComboBoxItem Content="MultipleChoice"/>
        </ComboBox>

        <StackPanel x:Name="TextAnswerPanel" Visibility="Visible">
            <TextBlock Text="Odpowiedź:"/>
            <TextBox x:Name="TextAnswerBox" Margin="0,0,0,10"/>
        </StackPanel>

        <StackPanel x:Name="MultipleChoicePanel" Visibility="Collapsed">
            <TextBlock Text="Opcje odpowiedzi:" FontWeight="Bold"/>
            <TextBox x:Name="OptionABox" Margin="0,2"/>
            <TextBox x:Name="OptionBBox" Margin="0,2"/>
            <TextBox x:Name="OptionCBox" Margin="0,2"/>
            <TextBox x:Name="OptionDBox" Margin="0,10"/>

            <TextBlock Text="Poprawna opcja:" FontWeight="Bold"/>
            <ComboBox x:Name="CorrectOptionComboBox" SelectedIndex="0">
                <ComboBoxItem Content="A"/>
                <ComboBoxItem Content="B"/>
                <ComboBoxItem Content="C"/>
                <ComboBoxItem Content="D"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
            <Button Content="💾 Dodaj" Click="SaveQuestion_Click" Width="100" Margin="0,0,10,0"/>
            <Button Content="↩ Wróć" Click="Cancel_Click" Width="100"/>
        </StackPanel>
    </StackPanel>
</UserControl>
