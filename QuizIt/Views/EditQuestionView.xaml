<UserControl x:Class="QuizIt.Views.EditQuestionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Margin="20" VerticalAlignment="Top">
        <TextBlock Text="Edytuj pytanie" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

        <TextBlock Text="Treść pytania:"/>
        <TextBox x:Name="QuestionBox" Margin="0,5"/>

        <TextBlock Text="Typ pytania:"/>
        <ComboBox x:Name="QuestionTypeBox" Margin="0,5" SelectionChanged="QuestionTypeBox_SelectionChanged">
            <ComboBoxItem Content="TextAnswer"/>
            <ComboBoxItem Content="MultipleChoice"/>
        </ComboBox>

        <StackPanel x:Name="TextAnswerPanel" Visibility="Collapsed" Margin="0,5">
            <TextBlock Text="Poprawna odpowiedź:"/>
            <TextBox x:Name="TextAnswerBox"/>
        </StackPanel>

        <StackPanel x:Name="MultipleChoicePanel" Visibility="Collapsed" Margin="10,5">
            <TextBlock Text="Opcje:"/>
            <StackPanel Margin="0,2">
                <TextBlock Text="Opcja A"/>
                <TextBox x:Name="OptionABox"/>
            </StackPanel>
            <StackPanel Margin="0,2">
                <TextBlock Text="Opcja B"/>
                <TextBox x:Name="OptionBBox"/>
            </StackPanel>
            <StackPanel Margin="0,2">
                <TextBlock Text="Opcja C"/>
                <TextBox x:Name="OptionCBox"/>
            </StackPanel>
            <StackPanel Margin="0,2">
                <TextBlock Text="Opcja D"/>
                <TextBox x:Name="OptionDBox"/>
            </StackPanel>
            <TextBlock Text="Poprawna opcja:" Margin="0,5"/>
            <ComboBox x:Name="CorrectOptionComboBox">
                <ComboBoxItem Content="0 - A"/>
                <ComboBoxItem Content="1 - B"/>
                <ComboBoxItem Content="2 - C"/>
                <ComboBoxItem Content="3 - D"/>
            </ComboBox>
        </StackPanel>

        <Button Content="Zapisz zmiany" Margin="0,15,0,0" Click="SaveChanges_Click"/>
    </StackPanel>
</UserControl>
