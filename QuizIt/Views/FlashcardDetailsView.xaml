<UserControl x:Class="QuizIt.Views.FlashcardDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer>
        <Border Margin="20"
                Background="{DynamicResource ContentBackground}"
                BorderBrush="#CCC"
                BorderThickness="1"
                CornerRadius="10"
                Padding="20">
            <StackPanel>

                <TextBlock Text="{Binding Title}"
                           Style="{StaticResource Header1}"
                           Margin="0,0,0,20"/>

                <TextBlock Text="📋 Pytania:"
                           Style="{StaticResource SubHeader}"/>

                <ItemsControl ItemsSource="{Binding Questions}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource BackgroundColor}"
                                    BorderBrush="#CCC"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="10"
                                    Margin="0,5">
                                <StackPanel>
                                    <TextBlock Text="{Binding Question}"
                                               FontWeight="Bold"
                                               FontSize="14"
                                               Foreground="{DynamicResource ForegroundColor}"/>

                                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0" HorizontalAlignment="Left">
                                        <Button Content="✏ Edytuj"
                                        Click="EditQuestion_Click"
                                        Tag="{Binding}"
                                        Style="{StaticResource ThemeButton}"
                                        Width="100"
                                        Height="36"
                                        Margin="0,0,10,0"/>

                                        <Button Content="🗑 Usuń"
                                        Click="DeleteQuestion_Click"
                                        Tag="{Binding}"
                                        Style="{StaticResource ThemeButtonDanger}"
                                        Width="100"
                                        Height="36"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Button Content="➕ Dodaj pytanie"
                        Click="AddQuestion_Click"
                        Style="{StaticResource ThemeButton}"
                        Width="160"
                        Margin="0,20,0,0"/>
            </StackPanel>
        </Border>
    </ScrollViewer>
</UserControl>
