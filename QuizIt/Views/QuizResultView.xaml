<UserControl x:Class="QuizIt.Views.QuizResultView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Quiz zakończony!" FontSize="26" FontWeight="Bold" Margin="0,0,0,10" TextAlignment="Center"/>
            <TextBlock x:Name="ResultText" FontSize="20" FontWeight="SemiBold" Foreground="Green" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
