<UserControl x:Class="QuizIt.Views.StatisticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             Background="Transparent">
    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="20,10,20,0" Grid.Row="0">
            <TextBlock Text="📊 Wybierz fiszkę:"
                       FontWeight="Bold"
                       FontSize="16"
                       Foreground="{DynamicResource ForegroundColor}"/>
            <ComboBox x:Name="FlashcardSelector"
                      SelectionChanged="FlashcardSelector_SelectionChanged"
                      Margin="0,5,0,10"
                      Background="{DynamicResource ContentBackground}"
                      Foreground="{DynamicResource ForegroundColor}"
                      FontSize="14"
                      FontFamily="Segoe UI Variable"/>
        </StackPanel>

        <Border Grid.Row="1"
                Margin="20"
                Background="{DynamicResource ContentBackground}"
                CornerRadius="10"
                BorderThickness="1"
                BorderBrush="#CCC"
                Padding="10">
            <lvc:CartesianChart x:Name="LineChart"
                                Series="{Binding Series}"
                                XAxes="{Binding XAxes}"
                                YAxes="{Binding YAxes}"
                                LegendPosition="Top"
                                ZoomMode="X"
                                TooltipPosition="Top"
                                />
        </Border>
    </Grid>
</UserControl>